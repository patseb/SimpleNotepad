<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:layout_width="match_parent"
		android:layout_weight="1">
		<EditText android:layout_width="match_parent"
			android:layout_height="match_parent" android:id="@+id/editNoteContentEditText"
			android:gravity="top|left" android:inputType="textMultiLine"></EditText>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout2" android:layout_width="match_parent"
		android:baselineAligned="false" android:layout_weight="0">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:id="@+id/editNoteSaveButton" android:text="@string/editenote_save"
			android:background="@drawable/button_selector" android:textColor="@color/listitem_linkcolor"></Button>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:id="@+id/editNoteCancelButton" android:text="@string/editenote_cancel"
			android:background="@drawable/button_selector" android:textColor="@color/listitem_linkcolor"></Button>
	</LinearLayout>
</LinearLayout>