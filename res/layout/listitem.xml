<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:paddingBottom="20px"
	android:background="@drawable/listitem_selector">
	<RelativeLayout android:layout_marginBottom="2px"
		android:id="@+id/relativeLayout1" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<Button android:layout_width="wrap_content" android:focusable="false"
			android:id="@+id/listItemEditButton" android:layout_alignParentLeft="true"
			android:layout_height="wrap_content" android:text="@string/listitem_edit"
			android:layout_marginRight="5px"></Button>
		<TextView android:layout_toRightOf="@+id/listItemEditButton"
			android:id="@+id/listItemCreationDateTextView" android:layout_width="wrap_content"
			android:gravity="center_vertical" android:layout_alignBottom="@+id/listItemEditButton"
			android:layout_alignTop="@+id/listItemEditButton"
			android:layout_height="wrap_content" android:text="TextView"
			android:focusable="false"></TextView>
		<Button android:layout_width="wrap_content" android:focusable="false"
			android:id="@+id/listItemDeleteButton" android:layout_marginLeft="5px"
			android:layout_height="wrap_content" android:text="@string/listitem_delete"
			android:layout_alignParentRight="true"></Button>
		<TextView android:id="@+id/listItemCreationTimeTextView"
			android:layout_toLeftOf="@+id/listItemDeleteButton" android:gravity="center_vertical"
			android:layout_alignBottom="@+id/listItemDeleteButton"
			android:layout_alignTop="@+id/listItemDeleteButton" android:text="TextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:focusable="false"></TextView>
	</RelativeLayout>
	<TextView android:textSize="20sp" android:id="@+id/listItemContentTextView" android:textColorLink="@color/listitem_linkcolor" android:text="TextView"
		android:textColor="@color/listitem_textcolor" android:focusable="false"
		android:layout_marginLeft="5px" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="5px"></TextView>
</LinearLayout>