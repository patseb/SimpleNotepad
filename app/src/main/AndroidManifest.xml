<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.patrykkwiatkowski.simplenotepad"
	android:installLocation="internalOnly"
	android:versionCode="8"
	android:versionName="2.1">

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity
			android:name="NoteList"
			android:launchMode="singleTop"
			android:label="@string/activity_notelist" />
		<activity
			android:name="NoteEditor"
			android:label="@string/activity_noteeditor"
			android:launchMode="singleTop"
			android:windowSoftInputMode="stateVisible|adjustResize">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="NoteViewer"
			android:launchMode="singleTop"
			android:label="@string/activity_noteviewer" />
	</application>
</manifest>